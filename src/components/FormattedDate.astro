---
interface Props {
  date: string | Date
}

const { date } = Astro.props

const formattedDate = new Date(date)
---

<time datetime={formattedDate.toISOString()}>
  {
    formattedDate.toLocaleDateString('es-cl', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
