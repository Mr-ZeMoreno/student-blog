---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { render } from "astro:content";
import { COLECCION } from "./consts";

// Definir el tipo de las entradas de la colecci√≥n
type Props = CollectionEntry<typeof COLECCION>;

let posts = await getCollection(COLECCION);
posts = posts.filter((post) => post.id.includes("index"));

const { Content } = await render(posts[0]);
---

<BlogPost {...posts[0].data}>
  <Content />
</BlogPost>
